<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
<div class="app-container">
    <!-- Левая панель -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Search">
            </div>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-title">TASKS</div>
                <a href="#" class="nav-item active">
                    <i class="bi bi-calendar-week"></i>
                    <span>Upcoming <span class="badge">11</span></span>
                </a>
                <a href="#" class="nav-item">
                    <i class="bi bi-sun"></i>
                    <span>Today <span class="badge">5</span></span>
                </a>
                <a href="#" class="nav-item">
                    <i class="bi bi-calendar3"></i>
                    <span>Calendar</span>
                </a>
                <a href="@Url.Action("Index", "StickyWall")" class="nav-item">
                    <i class="bi bi-columns-gap"></i>
                    <span>Sticky Wall</span>
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-title">LISTS</div>
                <a href="#" class="nav-item">
                    <i class="bi bi-person-circle"></i>
                    <span>Personal <span class="badge">3</span></span>
                </a>
                <a href="#" class="nav-item">
                    <i class="bi bi-briefcase"></i>
                    <span>Work <span class="badge">3</span></span>
                </a>
                <a href="#" class="nav-item">
                    <i class="bi bi-list-ul"></i>
                    <span>List 1 <span class="badge">3</span></span>
                </a>
                <a href="#" class="nav-item add-new">
                    <i class="bi bi-plus-lg"></i>
                    <span>Add New List</span>
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-title">TAGS</div>
                <div class="tags-container">
                    <span class="tag">Tag 1</span>
                    <span class="tag">Tag 2</span>
                    <a href="#" class="add-tag">+ Add Tag</a>
                </div>
            </div>
        </nav>

        <div class="sidebar-footer">
            <a href="#" class="nav-item">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
            <a href="#" class="nav-item">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign out</span>
            </a>
        </div>
    </div>

    <!-- Основное содержимое -->
    <div class="main-content">
        @RenderBody()
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>